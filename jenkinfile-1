pipeline {
    agent any
    stages{

        stage('Build'){

            steps{
                sh '''
                export M2_HOME=/opt/maven
                export PATH=${M2_HOME}/bin:${PATH}
                '''
                sh 'mvn clean package'
            }
        }
        stage('Deploy to stage'){

            steps{
                echo "Archiving Arctifacts..."
                archiveArtifacts artifacts: '**/target/*.war'
                
            }
        }
    }
}
